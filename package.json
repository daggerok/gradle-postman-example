{
  "name": "gradle-postman-runner",
  "version": "1.0.1",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "newman": "4.3.1",
    "npm-run-all": "4.1.5"
  },
  "scripts": {
    "test": "npm-run-all -p test:*",
    "test:0": "newman run ./src/test/json/rest-api-integration-tests.postman_collection.json  --disable-unicode --color auto --reporters html ",
    "test:1": "newman run ./src/test/json/rest-api-integration-tests.postman_collection1.json --disable-unicode --color auto --reporters html ",
    "test:2": "newman run ./src/test/json/rest-api-integration-tests.postman_collection2.json --disable-unicode --color auto --reporters html ",
    "test:insecure": "npm run test:2 -- --insecure"
  }
}
